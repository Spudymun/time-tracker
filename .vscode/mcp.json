{
  "servers": {
    // Кастомный MCP сервер проекта — читает spec-файлы для агента
    "project-context": {
      "type": "stdio",
      "command": "node",
      "args": ["${workspaceFolder}/mcp/dist/server.js"],
      "env": {
        "WORKSPACE_ROOT": "${workspaceFolder}"
      }
    }
    // Удалены: filesystem (встроен в Copilot нативно),
    //          git (используй встроенный Git Copilot),
    //          memory (не нужен в этом проекте),
    //          github (подключай по необходимости через user settings),
    //          postgres (подключай по необходимости через user settings)
  }
}
